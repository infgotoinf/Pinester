<Window x:Class="Pinester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pinester"
        mc:Ignorable="d"
        Title="Pinester" Height="440" Width="790">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <!-- Add Image Button -->
            <Button Content="Add Image" HorizontalAlignment="Left" 
                    Command="{Binding ImageTest}" Margin="10" 
                    VerticalAlignment="Center" Height="36" Width="111"/>
            <!-- Upload Image Button -->
            <Button Content="Upload Image" HorizontalAlignment="Left" 
                    Command="{Binding UploadImageCommand}" Margin="5,10,10,10" 
                    VerticalAlignment="Center" Height="36" Width="111"/>
        </StackPanel>
        
        <!-- Pinterest-style Layout -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ImageContainer">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Width="180" HorizontalAlignment="Left">
                            <Image Source="{Binding}" 
                                   Stretch="UniformToFill"
                                   VerticalAlignment="Top"
                                   HorizontalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>